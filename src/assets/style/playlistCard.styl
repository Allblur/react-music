.playlist-card
	display inline-block
	margin-bottom 30px
	background-color #fff
	.card-main
		width 298px
		border 1px solid #dfdfdf
		box-shadow 0px 1px 2px 0px rgba(158,158,158,0.2)
		.card-header
			height 260px
			position relative
			overflow hidden
			img
				width 100%
			.play-icon,.playing-icon
				display block
				width 100%
				height 100%
				position absolute
				bottom -260px
				left 0
				background-color rgba(10,10,10,.5)
				transition all .2s ease-in-out
				z-index 10
				cursor pointer
				.icons
					display block
					width 120px
					height 120px
					text-align center
					margin-top 100px
					margin-left 89px
					font-family "iconfont" !important
					font-size 72px
					font-style normal
					-webkit-font-smoothing antialiased
					-webkit-text-stroke-width 0.1px
					-moz-osx-font-smoothing grayscale
					font-style normal
					color #f63
				.icons:before
					content "\e605"
			.playing-icon
				bottom 0 !important
				cursor default !important
				.icons-group
					display flex
					height 100%
					align-items center
					justify-content center
					.icons-group-div
						height 60px
						width 55px
						position relative
						i
							display inline-block
							position absolute
							left 10px
							bottom 0
							width 2px
							height 30px
							background-color #fff
							-webkit-animation playingicons 1.3s infinite ease-in-out
							animation playingicons 1.3s infinite ease-in-out
							font-style normal
						.icons2
							-webkit-animation-delay -1.1s
							animation-delay -1.1s
							left 18px
						.icons3
							-webkit-animation-delay -0.8s
							animation-delay -0.8s
							left 26px
						.icons4
							-webkit-animation-delay -1.0s
							animation-delay -1.0s
							left 34px
						.icons5
							-webkit-animation-delay -0.9s
							animation-delay -0.9s
							left 42px
		.card-header:hover
			.play-icon
				bottom 0

		.card-body
			padding 10px 10px 0
			h4
				height 1.6em
				line-height 1.6em
				overflow hidden
				font-size 14px
				color #985d3e
			p
				height 4.5em
				line-height 1.5em
				white-space normal
				text-overflow ellipsis
				overflow hidden
			.card-ft
				margin 10px 0 20px 0
				.counts
					span
						padding-right 10px