.detailWrap
	margin-bottom 6em
.pl-dec
	margin-top 2em
	overflow hidden
	.pl-img
		float left
		width 400px
		overflow hidden
		img
			width 100%
	.detail-info
		margin-left 420px
		overflow hidden
		h3
			margin-bottom .5em
			font-size 18px
			color #dd4412
		.pl-count
			height 1.5em
			line-height 1.5em
			span
				padding-right 1em
		.description
			margin-top .5em
.pl-song-name
	margin-top 1em
	.pl-num
		height 3em
		line-height 3em
		background-color #f1f1f1
		padding 0 1em
		border-bottom #cdcdcd 1px solid
		border-top #cdcdcd 1px solid
	ul
		li
			padding 0 1em
			border-bottom #cdcdcd 1px solid
		li:nth-child(2n)
			background-color #f1f1f1
		li:hover
			background-color #f9f9f9
	.p-info
		height 3em
		line-height 3em
		overflow hidden
	.span
		height 3em
		display inline-block
		white-space normal
		text-overflow ellipsis
		overflow hidden
	.p-play
		width 120px
	.p-name
		width 420px
	.p-albumName
		width 330px
	.p-duration
		float right
		text-align right