.search-sf
    display flex
    justify-content center
    .search-form
    	width 500px
    	.search-wrap>input
    		width 488px
    		border-color #dcdcdc
.result-wrap
	margin-top 2em
	.result-hd
		border-left 1px solid #dcdcdc
		border-right 1px solid #dcdcdc
		background-color #f9f9f9
		overflow hidden
		li
			display inline-block
			width 25%
			border-top 2px solid #dcdcdc
			border-bottom 1px solid #dcdcdc
			span
				display inline-block
				width 100%
				height 35px
				line-height 35px
				border-right 1px solid #dcdcdc
				text-align center
				cursor pointer
		.active
			border-top-color #f10
			border-bottom-width 0px
			span
				background-color #fff
				border-left 1px solid #dcdcdc
		li.active:nth-child(1)
			span
				border-left-width 0px
.sr-error
	height 36px
	line-height 36px
	text-align center
				