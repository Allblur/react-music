.search-sf
    display flex
    justify-content center
    .search-form
    	width 500px
    	.search-wrap>input
    		width 488px
    		border-color #dcdcdc
.result-wrap
	margin-top 2em
	.result-hd
		border-left 1px solid #dcdcdc
		border-right 1px solid #dcdcdc
		background-color #f9f9f9
		overflow hidden
		li
			display inline-block
			width 25%
			border-top 2px solid #dcdcdc
			border-bottom 1px solid #dcdcdc
			span
				display inline-block
				width 100%
				height 35px
				line-height 35px
				border-right 1px solid #dcdcdc
				text-align center
				cursor pointer
		.active
			border-top-color #f10
			border-bottom-width 0px
			span
				background-color #fff
				border-left 1px solid #dcdcdc
		li.active:nth-child(1)
			span
				border-left-width 0px
	.result-bd
		margin-top 1em
		margin-bottom 6em
		.ri-list
			height 60px
			padding 10px 0
			border-top 1px #fff solid
			border-bottom 1px #fff solid
			span
				display inline-block
				height 60px
				line-height 60px
				padding 0 10px
				overflow hidden
			.to-play-plailist
				width 35px
				cursor pointer
				i
					font-size 25px
					color #9f9f9f
			.cover-imgurl
				img
					width 60px
					height 60px
			.playlist-name
				width 365px
			.playlist-trackcount
				width 50px
			.creator-name
				width 100px
				i
					color #9a9a9a
					font-style normal
		.ri-list:nth-child(2n)
			border-top 1px #f5f5f5 solid
			border-bottom 1px #f5f5f5 solid
			background-color #f5f5f5
		.ri-list:hover
			border-top 1px #e3e3e3 solid
			border-bottom 1px #e3e3e3 solid
			background-color #f5f5f5
		.ri-song-list
			height 30px !important
			span
				height 30px !important
				line-height 30px !important
			.playlist-name
				width 500px
			.album-name
				width 180px
.sr-error
	height 36px
	line-height 36px
	text-align center
