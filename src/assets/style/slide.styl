.slide-wrap
	position relative
.slide-ul
	width 100%
	position relative
	overflow hidden

.dots-wrap
	width 100%
	height 18px
	position absolute
	bottom 0
	text-align center
	line-height 18px

.slide-a
	display block
	float left
	width 100%
	height 100%

.slide-li
	width 100%
	padding-top 40%
	background-size 100% 100%

.dots
	display inline-block
	width 10px
	height 10px
	margin-left 8px
	border 1px solid #fff
	border-radius 50%

.dots:first-child
	margin-left 0

.dots:global.active
	background #fff
	